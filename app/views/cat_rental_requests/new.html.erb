<% @cat_rental_request.errors.full_messages.each do |message| %>
  <%= message %> <br>
<% end %>


<form action="<%= cat_rental_requests_url %>" method="POST">
  <label for="cat_id">Cat</label>
  <select name="cat_rental_request[cat_id]" id="cat_id">
    <option />
    <% @cats.each do |cat| %>
      <option
        value="<%= cat.id %>"
        <%= 'selected' if @cat_rental_request.cat_id == cat.id %>
      >
        <%= cat.name %>
      </option>
    <% end %>
  </select>
  <br/>

  <label for"start_date">Start Date</label>
  <input
    type="date"
    name="cat_rental_request[start_date]"
    id="start_date"
    value="<%= @cat_rental_request.start_date %>">
  <br>

  <label for"end_date">End Date</label>
  <input
    type="date"
    name="cat_rental_request[end_date]"
    id="end_date"
    value="<%= @cat_rental_request.end_date %>"
  >
  <br>

  <input type="submit">
</form>
